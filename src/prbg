#!/usr/bin/python3 -u

import argparse
import sys

import prbg

argparser = argparse.ArgumentParser(description="Pseudorandom bytes generator.")

argparser.add_argument("seed", help="seed of the pseudorandom generator")
argparser.add_argument("size", help="number of bytes generated")

args = argparser.parse_args()

# writes the contents of the generated bytearray to stdout
sys.stdout.buffer.write(prbg.pseudo_random_bytearray(args.seed, args.size))
